{ns fhir

 resource       {:zen/tags #{zen/tag}}
 primitive-type {:zen/tags #{zen/tag}}
 complex-type   {:zen/tags #{zen/tag}}
 logical        {:zen/tags #{zen/tag}}

 base    {:zen/tags #{zen/tag}
          :zen/desc "Sturcture Definition which add new elements (with derivation=specialization)"}
 profile {:zen/tags #{zen/tag}
          :zen/desc "Sturcture Definition which constraints base profiles and can not add new elements (with derivation=constraint)"}

 abstract {:zen/tags #{zen/tag}
           :zen/desc "Whether structure this definition describes is abstract or not - that is, whether the structure is not intended to be instantiated."}

 structure-definition
 {:zen/tags #{zen/tag zen/schema}
  :zen/desc "Zen schema representing some fhir StructureDefinition"
  :type     zen/map
  :keys     {:fhir/type           {:type zen/string}
             :fhir/definition-url {:type zen/string}
             :aidbox/data-format  {:type zen/keyword
                                   :enum [{:value :aidbox}
                                          {:value :fhir}]}}}}
